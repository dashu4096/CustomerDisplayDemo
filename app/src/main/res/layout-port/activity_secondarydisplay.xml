<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SecondaryDisplayActivity" >

    <Button
        android:id="@+id/video_btn"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
		android:text="@string/start_video"
		android:textSize="28sp" />
	
    <Button
        android:id="@+id/photo_btn"
        android:layout_width="600dp"
        android:layout_height="100dp"
		android:layout_below="@+id/video_btn"
        android:layout_marginTop="50dp"
		android:layout_alignLeft="@+id/video_btn"
        android:text="@string/start_photo"
		android:textSize="28sp" />

    <Button
        android:id="@+id/text_btn"
        android:layout_width="600dp"
        android:layout_height="100dp"
		android:layout_below="@+id/photo_btn"
        android:layout_marginTop="50dp"
		android:layout_alignLeft="@+id/photo_btn"
        android:text="@string/start_text"
		android:textSize="28sp" />

    <Button
        android:id="@+id/customer_btn"
        android:layout_width="600dp"
        android:layout_height="100dp"
		android:layout_below="@+id/text_btn"
        android:layout_marginTop="50dp"
		android:layout_alignLeft="@+id/text_btn"
        android:text="@string/start_customer"
		android:textSize="28sp" />

</RelativeLayout>
